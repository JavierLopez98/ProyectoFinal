@model ProyectoFinal.Models.Equipo

@{
    ViewData["Title"] = "ModificarEquipo";
    List<Liga> ligas = ViewData["ligas"] as List<Liga>;
    Liga lig = ViewData["Liga"] as Liga;
}

<h1>ModificarEquipo</h1>

<h4>Equipo</h4>
<hr />
<div class="d-flex justify-content-md-center">
    <div class="col-md-4">
        <form asp-action="ModificarEquipo" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="IdEquipo" class="control-label"></label>
                <input asp-for="IdEquipo" class="form-control" />
                <span asp-validation-for="IdEquipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="form-control" name="liga">

                    <option value="@lig.IdLiga" selected disabled>@lig.Nombre</option>
                    @foreach (Liga liga in ligas)
                    {
                        <option value="@liga.IdLiga">@liga.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input name="fotoequipo" type="file" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
