@model ProyectoFinal.Models.Equipo

@{
    ViewData["Title"] = "EliminarEquipos";
}



<h3>¿Está seguro de que quiere eliminar este equipo?</h3>
<div>
    <h4>Equipo</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Liga)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Liga)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class = "col-sm-10">
           <img src="~/Images/@Model.Foto" style="width:300px;height:auto" />
        </dd>
    </dl>
    
    <form asp-action="EliminarEquipos">
        <input name="id" value="@Model.IdEquipo" hidden/>
        <input type="submit" value="Delete" name="accion" class="btn btn-danger" /> |
        <input type="submit" value="Cancel" name="accion" class="btn btn-primary" />
    </form>
</div>
