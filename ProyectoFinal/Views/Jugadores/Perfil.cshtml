@model ProyectoFinal.Models.Jugador

@{
    ViewData["Title"] = "Perfil";
    Equipo eq = ViewData["Equipo"] as Equipo;
}
@section estilos{
    <style>
        .contenedor {
            background-color: lightgray;
            border: 1px solid lightgray;
            border-radius: 25px
        }
        .imagen{
        }
    </style>
}




<div class="contenedor">
    <h1>Perfil</h1>

    <a asp-controller="Jugadores" asp-action="CambiarContraseña" asp-route-id="@Model.IdJugador">Cambiar contraseña</a>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nick)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nick)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Funcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Funcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdEquipo)
        </dt>
        @* public IActionResult Detalles(int id) *@
        <dd class="col-sm-10">
            <a asp-controller="Equipo" asp-action="Detalles" asp-route-id="@eq.IdEquipo">
                @eq.Nombre
            </a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
    </dl>
    <div class="imagen">
        <dd class="col-sm-10">
            <img src="~/Images/@Model.Foto" style="width:200px;height:auto" />
        </dd>
    </div>
</div>


