@model ProyectoFinal.Models.Jugador

@{
    ViewData["Title"] = "EliminarJugador";
}

<h1>EliminarJugador</h1>

<h3>¿Está seguro de que quiere eliminar esté jugador?</h3>
<div>
    <h4>Jugador</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nick)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nick)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Funcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Funcion)
        </dd>
    </dl>
    
    <form asp-action="EliminarJugador">
        <input name="id" value="@Model.IdJugador" hidden />
        <input type="submit" value="Delete" name="accion" class="btn btn-danger" /> |
        <input type="submit" value="Cancel" name="accion" class="btn btn-primary">
    </form>
</div>
